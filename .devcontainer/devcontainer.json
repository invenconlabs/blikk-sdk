{
  "name": "Go dev",
  "image": "mcr.microsoft.com/devcontainers/go:1.23-bookworm",
  "runArgs": [
    "--name=go-dev"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go"
      ],
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true
      }
    }
  }
}
